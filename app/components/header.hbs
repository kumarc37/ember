<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <LinkTo class="navbar-brand" @route="index"><img src="/Assests/Images/plane.png"> <span class="special">M</span>ake<span class="special">Y</span>our<span class="special">T</span>rip</LinkTo>
    </div>
    {{#if @adminBtn}}
    <ul class="nav navbar-nav navbar-right">
        {{#if this.creds.isAdmin}}
            <button class="btn-orange" type="button" {{on "click" this.logout}}>Logout</button>
        {{else}}
            <button class="btn-orange" type="button" {{on "click" this.showModal}}>Admin Login</button>
        {{/if}}
    </ul>
    {{/if}}
  </div>
</nav>
<div class="modal" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          Admin Login Form
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">
          <div class="form-group">
            <label class="control-label col-sm-3" for="username">Username: <span class="mandatory">*</span></label>
            <div class="col-sm-10">
                <input {{on 'focus' this.onFocus}} type="text" class="form-control admin-required" id="username" placeholder="Enter username" name="username">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-3" for="password">Password: <span class="mandatory">*</span></label>
            <div class="col-sm-10">          
                <input {{on 'focus' this.onFocus}} type="password" class="form-control admin-required" id="password" placeholder="password" name="password">
            </div>
          </div>
          <div class="form-group">
                <button class="btn btn-primary" onclick={{action 'verifyAdminDetails'}} type="button">Submit</button>
          </div>
        </div>
        
        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" onclick={{action 'hideModal'}}>Close</button>
        </div>
        
      </div>
    </div>
  </div>
{{yield}}